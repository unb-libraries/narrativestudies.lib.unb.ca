version: '3.6'

services:
  drupal-mysql-lib-unb-ca:
    image: mysql:5.7
    restart: always
    command: mysqld --skip-name-resolve --max_allowed_packet=64M
    env_file:
      - ./env/mysql.env
    expose:
      - "3306"
    networks:
      - narrativestudies.lib.unb.ca

  drupal-redis-lib-unb-ca:
    image: redis:5-alpine
    restart: always
    expose:
      - "6379"
    networks:
      - narrativestudies.lib.unb.ca
    env_file:
      - ./env/redis.env

  drupal-solr-lib-unb-ca:
    image: unblibraries/solr-drupal:8.x-3.x
    expose:
      - "8983"
    networks:
      - narrativestudies.lib.unb.ca
    entrypoint:
      - docker-entrypoint-multiple.sh
      - narrativestudies_lib_unb_ca:/solr-conf

  narrativestudies.lib.unb.ca:
    image: narrativestudies.lib.unb.ca:latest
    restart: always
    container_name: narrativestudies.lib.unb.ca
    expose:
      - "80"
    ports:
      - "80:80"
    env_file:
      - ./env/drupal.env
    networks:
      - narrativestudies.lib.unb.ca

networks:
  narrativestudies.lib.unb.ca:
    name: narrativestudies.lib.unb.ca
